<% include ../partials/header %>
<div class="row justify-content-lg-center antiflashBlock">
  <div class="col-lg-9">
      <div class="jumbotron formTitle text-center">
        <h1>New Source</h1>
      </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-lg-9">
      <div class="formContainer">
      <form action="/sources" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="source[title]" placeholder="Title">
        </div>
        <div class="form-group">
          <select id="makerSelect" type-="text" name="source[makers]" style="width: 100%" multiple></select>
        </div>
        <div class="form-group">
          <textarea class="form-control" name="source[description]" placeholder="Description" rows="4"></textarea>
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="source[url]" placeholder="URL">
        </div>
        <div class="form-group">
          <input class="form-control" type="date" name="source[published]">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-block">Save</button>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>