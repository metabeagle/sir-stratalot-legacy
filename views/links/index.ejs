<% include ../partials/header %>
<% include ../partials/modules/login-modal %>
<div class="row">
  <div class="container">
    <div class="row justify-content-lg-center">
      <div class="col-lg-12">
      <!-- <div class="col-lg-9"> --> <!-- switch with other depending on columns -->
        <div class="listHeader">
          <div class="listHeadline">
            <h1><span>Links</span><i class="fas fa-list-ul"></i></h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div id="listjsContainer">
    <div class="row justify-content-lg-center">
      <div class="col-lg-12">
      <!-- <div class="col-lg-9"> --> <!-- switch with other depending on columns -->
        <div class="listTools">
          <% include ../partials/modules/links-list-search %>
          <% include ../partials/modules/links-list-sort %>
        </div>
      </div>
    </div>
    <div class="row justify-content-lg-center">
      <div class="col-lg-3">
        <div class="toolContainer">
          <% include ../partials/modules/links-list-filter %>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="listjs linkIndex">
          <!-- Main links index -->
          <% include ../partials/modules/links-list %>
        </div>
        <% include ../partials/modules/links-list-noresults %>
      </div>
    </div>
    <div class="row justify-content-lg-center">
      <div class="col-lg-3"></div>
      <div class="col-lg-9">
        <nav class="pagination-wrap">
          <ul class="pagination"></ul>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-lg-12">
      <% if(currentUser && currentUser.role === 'admin'){ %>
        <div class="adminTool">
          <a class="adminButton btn btn-outline-primary" href="/links/new">New Link</a>
          <a class="adminButton btn btn-outline-secondary" href="/links/prefetch">Update Prefetch</a>
          <a class="adminButton btn btn-outline-secondary" href="/links/downloadprefetch">Download Prefetch</a>
        </div>
      <% } %> 
    </div>
  </div>
</div>
<% include ../partials/footer %>