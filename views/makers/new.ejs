<% include ../partials/header %>
<div class="row justify-content-lg-center antiflashBlock">
  <div class="col-lg-9">
    <div class="jumbotron formTitle text-center">
      <h1>New Maker</h1>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-lg-9">
      <div class="formContainer">
        <form action="/makers" method="POST">
          <div class="form-group text-center">
            <div class="btn-group btn-group-sm btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-outline-primary active" for="makerKind1">
                  <input type="radio" name="maker[kind]" id="makerKind1" value="Person" checked>
                  Person
                </label>
              <label class="btn btn-outline-primary" for="makerKind2">
                <input type="radio" name="maker[kind]" id="makerKind2" value="Organization">
                  Organization
                </label>
            </div>
          </div>
          <div id="personName" class="form-group form-row">
            <div class="col">
              <input class="form-control" type="text" name="maker[first]" placeholder="First name">
            </div>
            <div class="col">
              <input class="form-control" type="text" name="maker[last]" placeholder="Last name">
            </div>
          </div>
          <div id="orgName" class="form-group form-row hide">
            <div class="col">
              <input class="form-control" type="text" name="maker[name]" placeholder="Name">
            </div>
          </div>
          <div id="makerChannels">
            <div class="makerChannelRow form-group form-row">
              <div class="col">
                <input class="form-control" type="text" name="maker[channels][0][kind]" placeholder="Channel">
              </div>
              <div class="col">
                <input class="form-control" type="text" name="maker[channels][0][name]" placeholder="Name">
              </div>
              <div class="col">
                <input class="form-control" type="text" name="maker[channels][0][url]" placeholder="URL">
              </div>
              <div class="col-sm-1">
                <button class="removeChannel btn btn-outline-danger btn-block" type="button"><i class="fas fa-times"></i></button>
              </div>
            </div>
          </div>
          <div class="form-group form-row">
            <div class="col-1">
              <button id="addChannel" type="button" class="btn btn-outline-success btn-block"><i class="fas fa-plus"></i></button>
            </div>
            <div class="col">
              <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>