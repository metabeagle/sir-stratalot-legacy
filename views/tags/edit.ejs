<% include ../partials/header %>
<!-- select2 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/js/select2.min.js" integrity="sha256-FA14tBI8v+/1BtcH9XtJpcNbComBEpdawUZA6BPXRVw=" crossorigin="anonymous"></script>
<div class="row justify-content-lg-center antiflashBlock">
	<div class="col-lg-9">
		<div class="jumbotron formTitle text-center">
			<h1>Edit Tag</h1>
		</div>
	</div>
</div>
<div class="container">
	<div class="row justify-content-lg-center">
		<div class="col-lg-9">
			<div class="formContainer">
				<form action="/tags/<%= tag._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="tag[tag]" placeholder="Tag" value="<%= tag.tag %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="tag[slug]" placeholder="Slug" value="<%= tag.slug %>">
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-block">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

<% include ../partials/footer %>