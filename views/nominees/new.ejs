<% include ../partials/header %>
<div class="row indexBlock nomFormBlock">
  <div class="container">
    <div class="row justify-content-lg-center">
      <div class="col-lg-9">
        <div class="jumbotron formTitle text-center">
          <div class="smallHead">Submit a link</div>
          <h1 class="balance-text">Nomination Form</h1>
          <div class="indexSubtitle balance-text">Fill out the form and hit submit. If your nomination gets enough upvotes, we’ll add it to the official directory.</div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-lg-center">
    <div class="col-lg-9">
      <div class="formContainer">
        <!-- <h2 class="card-title">Nomination Form</h2> -->
        <form id="newNominee" action="/nominees" method="POST">
          <div class="form-group">
            <label>Category</label>
            <select class="custom-select" type="text" name="nominee[subkind]">
              <option class="disabledOption" value="" disabled selected>Select a category</option>
              <option value="Article">Article</option>
              <option value="Blog">Blog</option>
              <option value="Book">Book</option>
              <option value="Case Study">Case Study</option>
              <option value="Community">Community</option>
              <option value="Education">Education</option>
              <option value="Meta">Meta Resource</option>
              <option value="Newsletter">Newsletter</option>
              <option value="Opportunity">Opportunity</option>
              <option value="Presentation">Presentation</option>
              <option value="Reference">Reference Material</option>
              <option value="Report">Report</option>
              <option value="Research">Research Source</option>
              <option value="Research Tool">Research Tool</option>
              <option value="Service">Service</option>
              <option value="Toolkit">Toolkit</option>
              <option value="Utility">Utility</option>
              <option value="Video">Video</option>
              <option value="Other">Other</option>
            </select>
            <div class="valid-feedback">Cool.</div>
            <div class="invalid-feedback">Please select a category.</div>
          </div>
          <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="nominee[title]" placeholder="What’s it called? Use the official name or title." required>
            <div class="valid-feedback">Nice.</div>
            <div class="invalid-feedback">Surely this thing has a title.</div>
          </div>
          <div class="form-group">
            <label>Maker(s)</label>
            <select id="makerSelect" type="text" name="nominee[makers]" style="width: 100%" multiple required></select>
            <div class="errorPlacement"></div>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" name="nominee[description]" placeholder="Briefly explain to your fellow planning slash strategy types what it is, and ideally say a bit about what makes it useful, enlightening, or otherwise awesome." rows="4" required></textarea>
            <div class="valid-feedback">Lovely description. Well said.</div>
            <div class="invalid-feedback">C'mon, tell us something interesting.</div>
          </div>
          <div class="form-group">
            <label>URL</label>
            <input class="form-control" type="url" name="nominee[url]" placeholder="Paste the full link here, including the http:// and all." required>
            <div class="valid-feedback">Now that's a URL right there.</div>
            <div class="invalid-feedback">Please include a valid URL.</div>
          </div>
          <div class="form-group">
            <label>Nominated By</label>
            <input class="form-control formDisabled" type="text" placeholder="<%= currentUser.name %> — @<%= currentUser.username %>" readonly>
            <input class="hide" value="<%= currentUser.id %>" name="nominee[user]">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<% include ../partials/footer %>